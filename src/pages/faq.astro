---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqPricing = faqData.filter((faq) => faq.category === 'faq-algemeen')
const faqIntegrations = faqData.filter((faq) => faq.category === 'integrations')

// Content
import faqImage1 from '../assets/faq/faq-golf1.png'
import faqImage2 from '../assets/faq/faq-golf.png'

// - SEO
const SEO = {
	title: 'JouwGolftrip | Alles wat je wilt weten over jouw golfreis op maat',
	description:
		'Vind snel het antwoord op al je vragen over JouwGolftrip, onze diensten, hoe het werkt en wie wij zijn.'
}
// - Page Header
const header = {
	title: 'Veelgestelde vragen over <strong>JouwGolftrip</strong>',
	text: 'Vind snel het antwoord op alles rondom jouw golfavontuur.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ
		title="Alles wat je wilt weten"
		text="Vind snel antwoord op de meestgestelde vragen over jouw op maat gemaakte golftrip."
		data={faqPricing}
	/>
	<TextImage
		title="Wie zit er achter JouwGolftrip?"
		text="Hi, ik ben Ingmar, enthousiast golfer met een doel om (langzaam, maar gestaag) zoveel mogelijk banen in de wereld te spelen met vrienden en familie. <br><br> <strong>Waarom ik deze dienst aanbied?</strong> <br>Omdat ik het ontzettend leuk vind om golftrips te organiseren die écht kloppen. Voor mijn eigen vrienden en familie ben ik altijd degene die alles uitzoekt — van de banen tot het verblijf. Dat puzzelen met wensen, banen en budget geeft me energie. En omdat ik zelf maar beperkt op pad kan, help ik nu ook anderen met plezier aan hun ideale golfreis."
		image={faqImage1}
		mobileImage={faqImage2}
		imagePosition="left"
		offsetImage
		id="overmij"
		classes="bg-neutral-50 dark:bg-neutral-900 lg:!py-64"
	/>
	<CTA />
</Layout>